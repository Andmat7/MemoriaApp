.page--menu-page__content
	color white

.menu-close,
.menu-close > .toolbar-button
	color #999

.menu-list,
			.menu-item:first-child,
			.menu-item:last-child,
			.menu-item
	background-color transparent
	background-image none !important
	border-color transparent
	color #fff

.menu-item
	line-height 44px
	height 44px
	text-shadow rgba(0, 0, 0, 0.4) 0px 1px 0px
	&:active
		background-color rgba(255, 255, 255, 0.1)
	margin 0 17px
	padding 0 !important
	min-height 0
.menu-notification
	display inline-block
	margin-top 12px
	font-size 14px
	height 20px
	line-height 20px
	min-width 20px
	font-weight 600
	float right
	color black

.bottom-menu-list,
			.bottom-menu-item:first-child,
			.bottom-menu-item:last-child,
			.bottom-menu-item
	border-color #393939
	background-color transparent
	background-image none !important
	color #ccc

.bottom-menu-item
	&:active
		background-color rgba(255, 255, 255, 0.1)


.onsen-sliding-menu__menu.ons-sliding-menu-inner
	box-shadow: rgba(0, 0, 0, 0) 0px 0px 10px 0px !important;
.page--menu-page__background
	opacity 0.95
	background-color  #0D1626
	position absolute
	top 44px

.title-menu
	color #04bfa9!important
	border-bottom 1px solid #04bfa9!important
	padding 0
.page--menu-title
	border-left-color #FEC62E!important
	border-left-style solid
	border-left-width 4px 
	padding-left 13px!important
	line-height 40px!important
	height 37px!important
	min-height 0
	margin 0
	padding 0
